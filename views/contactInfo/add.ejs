<div class="contact-info-container">
    <h1>Add Your Contact Information</h1>

    <form action="/contactInfo/add" method="POST">
        <div class="form-group">
            <label for="UserName">Name:</label>
            <input type="text" id="UserName" name="UserName" placeholder="Enter your name" required>
        </div>

        <div class="form-group">
            <label for="UserEmail">Email:</label>
            <input type="email" id="UserEmail" name="UserEmail" placeholder="Enter your email" required>
        </div>

        <div class="form-group">
            <label for="UserPhone">Phone:</label>
            <input type="text" id="UserPhone" name="UserPhone" placeholder="Enter your phone number">
        </div>

        <div class="form-group">
            <label for="UserAddress">Address:</label>
            <input type="text" id="UserAddress" name="UserAddress" placeholder="Enter your address">
        </div>

        <button type="submit">Add User</button>
    </form>
</div>


