<hr>
<h2>Purchase History</h2>
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 18px;
        text-align: left;
    }
    th, td {
        padding: 12px;
        border-bottom: 1px solid #ddd;
    }
    th {
        background-color: #f2f2f2;
    }
    tr:hover {
        background-color: #f5f5f5;
    }
</style>
<table>
    <thead>
        <tr>
            <th>Purchase ID</th>
            <th>Plate Number</th>
            <th>Purchase Date</th>
            <th>Points</th>
        </tr>
    </thead>
    <tbody>
        <% for (let i = 0; i < purchaseHistory.length; i++) { %>
            <tr>
                <td><%= purchaseHistory[i].purchaseId %></td>
                <td><%= purchaseHistory[i].plateNumber %></td>
                <td><%= purchaseHistory[i].purchaseDate %></td>
                <td><%= purchaseHistory[i].points %></td>
            </tr>
        <% } %>
    </tbody>
</table>
